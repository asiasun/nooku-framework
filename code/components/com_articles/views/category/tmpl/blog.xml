<?xml version="1.0" encoding="utf-8"?>
<metadata>
    <layout title="Category Blog Layout">
        <message>
            <![CDATA[CATEGORY BLOG LAYOUT DESC]]>
        </message>
    </layout>
    <state>
        <name>Category Blog Layout</name>
        <description>CATEGORY BLOG LAYOUT DESC</description>
        <url addpath="/administrator/components/com_articles/elements">
            <param name="id" type="category" label="Category" description="SELECT CATEGORY"/>
        </url>
        <params>
            <param name="articles_per_page" type="text" default="5" label="Articles per page"
                   description="ARTICLES PER PAGE DESC"/>
            <param name="sort_by" type="list" default="newest" label="Sort by" description="SORT BY DESC">
                <option value="newest">Newest first</option>
                <option value="oldest">Oldest first</option>
                <option value="order">Ordering</option>
            </param>
        </params>
        <advanced>
            <param name="show_description" type="radio" default="0" label="Category description"
                   description="CATEGORY DESCRIPTION DESC">
                <option value="0">Hide</option>
                <option value="1">Show</option>
            </param>
            <param name="show_description_image" type="radio" default="0" label="Category Image"
                   description="CATEGORY IMAGE DESC">
                <option value="0">Hide</option>
                <option value="1">Show</option>
            </param>
            <param name="show_feed_link" type="radio" default="1" label="Show a feed link"
                   description="PARAMSHOWFEEDLINK">
                <option value="0">No</option>
                <option value="1">Yes</option>
            </param>
        </advanced>
    </state>
</metadata>