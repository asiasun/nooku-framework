<?xml version="1.0" encoding="utf-8"?>
<metadata>
    <layout title="Standard Category Layout">
        <message>
            <![CDATA[STANDARD CATEGORY LAYOUT DESC]]>
        </message>
    </layout>
    <state>
        <name>Standard Category Layout</name>
        <description>STANDARD CATEGORY LAYOUT DESC</description>
        <url addpath="/administrator/components/com_articles/elements">
            <param name="id" type="category" label="Category" description="SELECT CATEGORY"/>
        </url>
        <params>
            <param name="show_headings" type="radio" default="1" label="Table Headings"
                   description="TABLE HEADINGS DESC">
                <option value="0">Hide</option>
                <option value="1">Show</option>
            </param>
            <param name="show_date" type="list" default="" label="Date Column" description="DATE COLUMN DESC">
                <option value="0">Hide</option>
                <option value="1">Show</option>
            </param>
            <param name="date_format" type="text" size="15" default="" label="Date Format"
                   description="PARAMDATEFORMAT"/>
            <param name="articles_per_page" type="text" default="5" label="Articles per page" description="ARTICLES PER PAGE DESC"/>
        </params>
        <advanced>
            <param name="sort_by" type="list" default="newest" label="Sort by" description="SORT BY DESC">
                <option value="newest">Newest first</option>
                <option value="oldest">Oldest first</option>
                <option value="author">Author</option>
                <option value="order">Ordering</option>
            </param>
            <param name="show_pagination" type="list" default="1" label="Show pagination"
                   description="SHOW PAGINATION DESC">
                <option value="0">Hide</option>
                <option value="1">Show</option>
            </param>
            <param name="show_feed_link" type="radio" default="1" label="Show a feed link"
                   description="PARAMSHOWFEEDLINK">
                <option value="0">No</option>
                <option value="1">Yes</option>
            </param>
        </advanced>
    </state>
</metadata>
