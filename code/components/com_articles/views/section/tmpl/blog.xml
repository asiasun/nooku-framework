<?xml version="1.0" encoding="utf-8"?>
<metadata>
    <layout title="Section Blog Layout">
        <message>
            <![CDATA[SECTION BLOG LAYOUT DESC]]>
        </message>
    </layout>
    <state>
        <name>Section Blog Layout</name>
        <description>SECTION BLOG LAYOUT DESC</description>
        <url addpath="/administrator/components/com_articles/elements">
            <param name="id" type="section" label="Section" description="SELECT SECTION"/>
        </url>
        <params>
            <param name="show_description" type="radio" default="0" label="Section description"
                   description="SECTION DESCRIPTION DESC">
                <option value="0">Hide</option>
                <option value="1">Show</option>
            </param>
            <param name="show_description_image" type="radio" default="0" label="Section image"
                   description="SECTION IMAGE DESC">
                <option value="0">Hide</option>
                <option value="1">Show</option>
            </param>
            <param name="articles_per_page" type="text" default="5" label="Articles per page"
                   description="ARTICLES PER PAGE DESC"/>
        </params>
        <advanced>
            <param name="sort_by" type="list" default="newest" label="Sort by" description="SORT BY DESC">
                <option value="newest">Newest first</option>
                <option value="oldest">Oldest first</option>
                <option value="author">Author</option>
                <option value="order">Ordering</option>
            </param>
            <param name="show_pagination" type="list" default="1" label="Show pagination"
                   description="SHOW PAGINATION DESC">
                <option value="0">Hide</option>
                <option value="1">Show</option>
            </param>
            <param name="show_feed_link" type="radio" default="1" label="Show a feed link"
                   description="PARAMSHOWFEEDLINK">
                <option value="0">No</option>
                <option value="1">Yes</option>
            </param>
        </advanced>
    </state>
</metadata>