	<authorEmail>info@nooku.org</authorEmail>
	<authorUrl>www.nooku.org</authorUrl>
	<version>0.7</version>
	<description>A tagging component</description>

	<!-- Application/site -->
	<files folder="site/components/com_terms">
		<file>terms.php</file>
	</files>
	
	<!-- Application/administrator -->
	<administration>
		<menu>Terms</menu>

		<files folder="administrator/components/com_terms">
			<file>terms.php</file>
            <folder>controllers</folder>
			<folder>install</folder>
			<folder>models</folder>
            <folder>databases</folder>
			<folder>views</folder>
		</files>
	</administration>
	
	<!--  Media -->
	<media destination="com_terms" folder="media/com_terms">
		<folder>css</folder>
		<folder>images</folder>
		<folder>js</folder>		
	</media>
	
	<!-- Installation -->
	<install>
		<sql>
			<file charset="utf8" driver="mysql">install/install.sql</file>
		</sql>
	</install>

	<uninstall>
		<sql>
			<file charset="utf8" driver="mysql">install/uninstall.sql</file>
		</sql>
	</uninstall>

</install>