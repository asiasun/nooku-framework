<install type="module" version="1.5.0" method="upgrade">
    <name>Articles</name>
    <author>Nooku Project</author>
    <creationDate>June 2012</creationDate>
    <copyright>Copyright (C) 2010 Timble CVBA and Contributors. (http://www.timble.net).</copyright>
    <license>http://www.gnu.org/licenses/gpl.html GNU/GPL v3</license>
    <authorEmail>info@nooku.org</authorEmail>
    <authorUrl>www.nooku.org</authorUrl>
    <version>12.2</version>
    <description>MOD_ARTICLES_DESC</description>
    <files>
        <filename module="mod_articles">mod_articles.php</filename>
        <file>html.php</file>
    </files>
    <params>
        <param name="count" type="text" default="5" label="COUNT" description="COUNT_DESC" />
        <param name="show_content" type="radio" default="0" label="SHOW CONTENT" description="SHOW_CONTENT_DESC">
            <option value="1">YES</option>
            <option value="0">NO</option>
        </param>
        <param name="sort_by" type="list" default="newest" label="SORT BY" description="SORT_BY_DESC">
            <option value="newest">NEWEST FIRST</option>
            <option value="oldest">OLDEST FIRST</option>
            <option value="order">ORDERING</option>
        </param>
        <param name="@spacer" type="spacer" default="" label="" description="" />
        <param name="show_featured" type="radio" default="0" label="SHOW FEATURED ARTICLES" description="SHOW_FEATURED_ARTICLES_DESC">
            <option value="1">Yes</option>
            <option value="0">No</option>
        </param>
        <param name="section" type="text" default="" label="SECTION" description="SECTION_DESC" />
        <param name="category" type="text" default="" label="CATEGORY" description="CATEGORY_DESC" />
        <param name="@spacer" type="spacer" default="" label="" description="" />
        <param name="moduleclass_sfx" type="text" default="" label="Module Class Suffix" description="PARAMMODULECLASSSUFFIX" />
    </params>
    <params group="advanced">
        <param name="cache" type="list" default="1" label="Caching" description="Select whether to cache the content of this module">
            <option value="1">Use global</option>
            <option value="0">No caching</option>
        </param>
        <param name="cache_time" type="text" default="900" label="Cache Time" description="The time before the module is recached" />
    </params>
</install>
