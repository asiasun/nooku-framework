<?xml version="1.0" encoding="utf-8"?>
<metadata>
    <layout title="Articles Table Layout">
        <message>
            <![CDATA[ARTICLES TABLE LAYOUT DESC]]>
        </message>
    </layout>
    <state>
        <name>Articles Table Layout</name>
        <description>ARTICLES TABLE LAYOUT DESC</description>
        <url addpath="/administrator/components/com_categories/elements">
            <param name="category" type="category" table="articles" label="Category" description="SELECT CATEGORY"/>
        </url>
        <params>
            <param name="articles_per_page" type="text" default="5" label="Articles per page"
                   description="ARTICLES PER PAGE DESC"/>
            <param name="show_featured" type="radio" default="0" label="Show featured articles"
                   description="SHOW FEATURED ARTICLES DESC">
                <option value="1">Yes</option>
                <option value="0">No</option>
            </param>
            <param name="sort_by" type="list" default="newest" label="Sort by" description="SORT BY DESC">
                <option value="newest">Newest first</option>
                <option value="oldest">Oldest first</option>
                <option value="order">Ordering</option>
            </param>
            <param name="show_description" type="radio" default="0" label="Category description"
                   description="CATEGORY DESCRIPTION DESC">
                <option value="0">Hide</option>
                <option value="1">Show</option>
            </param>
            <param name="show_description_image" type="radio" default="0" label="Category Image"
                   description="CATEGORY IMAGE DESC">
                <option value="0">Hide</option>
                <option value="1">Show</option>
            </param>
            <param name="show_headings" type="radio" default="1" label="Table Headings"
                   description="TABLE HEADINGS DESC">
                <option value="0">Hide</option>
                <option value="1">Show</option>
            </param>
            <param name="show_date" type="list" default="1" label="Date Column" description="DATE COLUMN DESC">
                <option value="0">Hide</option>
                <option value="1">Show</option>
            </param>
        </params>
    </state>
</metadata>
